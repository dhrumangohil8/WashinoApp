<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/roundCardView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:elevation="0dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id ="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile" />
        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="240dp"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="23dp"
                        android:textColor="#2A2A72"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Name: " />

                    <TextView
                        android:id="@+id/show_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="23dp"
                        android:textColor="#2A2A72"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Name: " />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:text="Gender: "
                        android:textColor="#2A2A72"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/show_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:text="Gender: "
                        android:textColor="#2A2A72"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutx">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="23dp"
                        android:textColor="#2A2A72"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Email: " />

                    <TextView
                        android:id="@+id/show_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="23dp"
                        android:textColor="#2A2A72"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Email: " />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="2dp"
                        android:textColor="#2A2A72"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Address: " />

                    <TextView
                        android:id="@+id/show_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="2dp"
                        android:textColor="#2A2A72"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Address: " />

                </LinearLayout>

                <View
                    android:id="@+id/line_break1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/loginregister_button"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/line_break1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="#2A2A72"
                            android:textSize="15dp"
                            android:text="Car Type: " />

                        <TextView
                            android:id="@+id/show_car_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:textColor="#2A2A72"
                            android:text="Car Type: "/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="2dp"
                            android:paddingRight="23dp"
                            android:text="Car Name: "

                            android:textColor="#2A2A72"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/show_car_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:paddingRight="23dp"
                            android:text="Car Name: "

                            android:textColor="#2A2A72"
                            android:textSize="15dp" />

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:textColor="#2A2A72"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Car No: " />

                    <TextView
                        android:id="@+id/show_car_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:textColor="#2A2A72"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Car No: " />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayoutdef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:text="Default Wash Time: "
                        android:textColor="#2A2A72"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/show_wash_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:text="Default Wash Time: "
                        android:textColor="#2A2A72"
                        android:textSize="15dp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

                    <Button
                        android:id="@+id/edit"
                        android:layout_width="139dp"
                        android:layout_height="58dp"
                        android:background="@drawable/custombutton"
                        android:elevation="50dp"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:cursorVisible="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.533"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.209" />






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingBottom="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

                    <Button
                        android:id="@+id/logout"
                        android:layout_width="206dp"
                        android:layout_height="58dp"
                        android:cursorVisible="true"
                        android:elevation="50dp"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:background="#DF4B37"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.533"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.209">

                    </Button>




                </LinearLayout>




            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Profile"
            android:textColor="#FFFF"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>