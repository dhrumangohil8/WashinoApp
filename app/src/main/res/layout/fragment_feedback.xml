<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feedback">

    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/smile_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="#03A9F4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="201dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="661dp"
        android:gravity="center"
        android:text="Feedback"
        android:textAlignment="center"


        android:textColor="#03A9F4"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="89dp"
        android:layout_height="37dp"
        android:layout_below="@+id/smile_rating"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="304dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="#2A2A72"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"

        android:textAlignment="center"
        android:layout_marginBottom="263dp"
        android:text="Next" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/smile_rating"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textColor="#03A9F4"

        android:text="How Was The Experience Of our services? "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_above="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="122dp"
        android:layout_marginBottom="57dp"
        android:gravity="center"
        android:text="Spend some time to help us to improve our services"
        android:textSize="20dp" />


</RelativeLayout>